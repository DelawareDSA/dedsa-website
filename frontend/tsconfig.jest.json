{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", 
    "setupTests.ts", 
    "jest-setup.ts",
    "src/@types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
