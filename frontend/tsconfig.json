{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": { "@/*": ["src/*"] },
    "baseUrl": ".",
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": ["*.config.ts", "*.ts", "src/**/*", ".next/types/**/*.ts", "src", "setupTests.ts"],
  "references": [],
  "exclude": ["node_modules"]
}
